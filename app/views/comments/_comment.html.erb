<div class="wrap-comment<%= comment.id %>">
  <p class="image">
    <%= link_to user_path(comment.user.id) do%>
      <% if comment.user.profile_image_id.nil? %>
        <%= image_tag "https://dmmpostimages.s3.ap-northeast-1.amazonaws.com/no_image.png",:size =>'50x50' %>
      <% else %>
        <%= image_tag "https://dmmpostimages.s3.ap-northeast-1.amazonaws.com/store/#{comment.user.profile_image_id}",:size =>'50x50' %>
      <% end %>
    <% end %>
        <%= comment.comment %>
    <% if current_user == comment.user %>
      <%= link_to '削除する', post_image_comment_path(@post_image, comment), class: 'btn btn-outline-primary', method: :delete, remote: true %>
    <% end %>
  </p>
</div>