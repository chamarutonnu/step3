<!-- おすすめユーザー -->
<div class="top-box">
  <div class="row">
    <div class="col-xs-5">
      <div class="side-box">
        <p class="side-title">おすすめユーザー</p>
        <% @famous_users.each do |famous_user|%>
          <p class="user-profile">
            <%= attachment_image_tag famous_user, :profile_image, :fill, 100, 100, fallback: "no_image.png", size:'30x30' %>
            <%=link_to famous_user.user_name, user_path(famous_user) %>
          </p>
        <% end %>
      </div>
      <!-- 季節 -->
      <p class="side-title">季節で探す</p>
      <ul class="list-group">
        <li class= "season-items"><%= link_to "春", homes_search_season_path(season: 'spring') %></li>
        <li class= "season-items"><%= link_to "夏", homes_search_season_path(season: 'summer') %></li>
        <li class= "season-items"><%= link_to "秋", homes_search_season_path(season: 'autumn') %></li>
        <li class= "season-items"><%= link_to "冬", homes_search_season_path(season: 'winter') %></li>
      </ul>

      <p class="side-title"><カテゴリーで探す</p>
      <ul class="list-group">
        <li class= "category-items"><%= link_to "春", homes_search_category_path(season: 'spring') %></li>
        <li class= "category-items"><%= link_to "夏", homes_search_category_path(season: 'summer') %></li>
        <li class= "category-items"><%= link_to "秋", homes_search_category_path(season: 'autumn') %></li>
        <li class= "category-items"><%= link_to "冬", homes_search_category_path(season: 'winter') %></li>
      </ul>
    </div>


    <div class="col-xs-7">
      <h2>おすすめのコーディネイト</h2>
      <div class="a">
        <div class="b"><img class="c" src="/assets/no_image.png"></div>
        <div class="b"><img class="c" src="/assets/no_image.png"></div>
        <div class="b"><img class="c" src="/assets/no_image.png"></div>
      </div>
  </div>
</div>