<div class="favorites">
  <% if user_signed_in? %>
    <% if post_image.favorited_by?(current_user) %>
      <p><span class="glyphicon glyphicon-heart"></span><%=link_to post_image.favorites.count, post_image_favorites_path(post_image.id), method: :delete, remote: true %></p>
  <% else %>
    <p><span class="glyphicon glyphicon-heart-empty"></span><%=link_to post_image.favorites.count, post_image_favorites_path(post_image.id), method: :post, remote:true %></p>
    <% end %>
  <% else %>
    <p><span>お気に入り数: </span><%= post_image.favorites.count %></p>
  <% end %>
</div>