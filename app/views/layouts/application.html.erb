<!DOCTYPE html>
<html>
  <head>
    <title>Ufaen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>

  <body>
    <% if user_signed_in? %>
      <header>
        <nav class="header-contents">
          <ul class="header-items">
            <li class="item">
              <%= link_to root_path, class: "logo" do %>
              <%= image_tag 'logo2.png' %>
              <% end %>
            </li>
            <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
            <li><%= link_to 'user一覧', users_path %></li>
            <li><%= link_to '投稿一覧', post_images_path %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        </nav>





      <!-- <nav>
        <ul class="nav-list">
          <li class="nav-list-item"><%= link_to 'ALL',"" %></li>
          <li class="nav-list-item"><%= link_to 'MAN',"" %></li>
          <li class="nav-list-item"><%= link_to 'WOMAN',"" %></li>
        </ul>
      </nav> -->
      </header>

    <% else %>
      <header>
        <div class="header-content">
          <%= link_to 'ufaen', root_path, class: "logo" %>
          <%= link_to 'ログイン', new_user_session_path %>/
          <%= link_to '新規会員登録', new_user_registration_path %>
        </div>
      </header>
    <% end %>

    <main>
      <div class="container">
      <%= yield %>
      </div>
    </main>

    <footer></footer>
  </body>
</html>

