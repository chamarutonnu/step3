<div class="row">
  <div class="col-xs-4">
<h2>コーディネイト投稿</h2>
<br>
	<%= form_for(@post_image, url: post_images_path) do |f| %>
		<%= f.attachment_field :image %>
    <br>
			<p>
      	<%= f.label :"コーディネイト名" %><br/>
        <%= f.text_field :code_name %>
      </p>
      <br>
      <p>
      	<%= f.label :"コーディネイトテーマ" %><br/>
        <%= f.text_field :code_thema %>
      </p>
      <br>
      <p>
      	<%= f.label :"コーディネイト説明" %><br/>
        <%= f.text_area :code_explain %>
      </p>
      <br>
      <p>
        <%= f.label :"コーディネイトジャンル" %><br/>
        <%= f.select :category, {'tシャツ': 't_shirt', 'シャツ': 'shirt', 'ジャケット': 'jacket', 'ニット': 'knit', 'コート': 'coat', 'デニム': 'denim', 'その他': 'other'}, { include_blank: '選択してください'}, {required: true } %>
      </p>
      <p>
        <%= f.label :"季節" %><br/>
        <%= f.select :season, {'春': 'spring', '夏': 'summer', '秋': 'autumn', '冬': 'winter'}, { include_blank: '選択してください'}, {required: true } %>
      </p>
		<%= f.submit '新規登録', class: "btn btn-primary pull-right " %>
	<% end %>
  </div>
</div>

