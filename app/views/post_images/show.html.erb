
<div class="row">
	<div class="col-xs-8">
		<div class="post-image">
			<%= attachment_image_tag @post_image, :image,:size =>'490x590' %>
		</div>
	</div>

	<div class="col-xs-4">
	  <table>
	  	<tbody>
	  		<tr>
	  			<th>code_name</th>
	  		</tr>
	  		<tr>
	  			<th><%= @post_image.code_name %></th>
	     	</tr>
	     	<tr>
	     		<th>code_thema</th>
	     	</tr>
	     	<tr>
	  			<th><%= @post_image.code_thema %></th>
	     	</tr>
	     	<tr>
	     		<th>code_explain</th>
	     	</tr>
	     	<tr>
	  			<th><%= @post_image.code_explain %></th>
	     	</tr>
	     	<tr>
	     		<th>カテゴリー</th>
	     	</tr>
	     	<tr>
	     		<th>季節</th>
	     	</tr>
	  	</tbody>
	  </table>

    <!-- お気に入り機能 -->
    <div>
		  <% if user_signed_in? %>
	    	<% if @post_image.favorited_by?(current_user) %>
	      	<p><span class="glyphicon glyphicon-heart"></span><%=link_to @post_image.favorites.count, post_image_favorites_path(@post_image.id), method: :delete %></p>
	    <% else %>
	      <p><span class="glyphicon glyphicon-heart-empty"></span><%=link_to @post_image.favorites.count, post_image_favorites_path(@post_image.id), method: :post %></p>
	    	<% end %>
	  	<% else %>
	    	<p><span>お気に入り数: </span><%= @post_image.favorites.count %></p>
	  	<% end %>
	  </div>

　　<!-- コメント機能 -->
    <div>
		  <%= form_with(model:[@post_image, @comment],url: post_image_comments_path(@post_image), method: :post, local: true) do |f| %>
		  	<%= f.text_area :comment %>
		  	<%= f.hidden_field :post_image_id, value: @post_image.id %>
		  	<%= f.submit "コメントする" ,class: 'btn btn-primary' %>
		  <% end %>
  	</div>

　　<!-- フォロー機能 -->
  	<div>
    	<% if current_user != @post_image.user %>
    		<% if @post_image.user.followed_by?(current_user) %>
    			<p><%=link_to "フォロー済み", user_relationships_path(@post_image.user.id), method: :delete %></p>
    	<% else %>
    			<p><%=link_to "フォローする", user_relationships_path(@post_image.user.id), method: :post %></p>
    		<% end %>
    	<% end %>
  	</div>




	</div>
</div>

<div>
  <% if @post_image.user == current_user %>
  	<%= link_to "編集", edit_post_image_path(@post_image) %>
	<% end %>

	<% @comments.each do |comment| %>
  <%= comment.comment %>
  <% end %>
  <% if current_user == @comment.user %>
    <td><%= link_to 'Destroy', post_image_comment_path(@post_image.comments), class: 'btn-sm btn-danger', method: :delete %></td>
  <% end %>
</div>