<h1>会員一覧</h1>
<div class="row">
    <table class="table">
      <thead>
        <tr>
          <th class="active">profile_image</th>
          <th class="active">会員ID</th>
          <th class="active">user_name</th>
          <th class="active">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td class="image">
            <% if user.profile_image_id.nil? %>
              <%= image_tag "https://dmmpostimages.s3.ap-northeast-1.amazonaws.com/no_image.png",:size =>'30x30' %>
            <% else %>
              <%= image_tag "https://dmmpostimages.s3.ap-northeast-1.amazonaws.com/store/#{user.profile_image_id}",:size =>'30x30' %>
            <% end %>
          </td>
          <td><%= user.id %></td>
          <td>
            <%= link_to user_path(user) do %>
              <%= user.user_name %>
            <% end %>
          </td>
          <td><%= user.is_deleted %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
